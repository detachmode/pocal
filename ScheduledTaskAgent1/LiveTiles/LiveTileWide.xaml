<UserControl x:Class="ScheduledTaskAgent1.LiveTileWide"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="691">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <StackPanel Margin="12" >
            <TextBlock FontSize="40" x:Name="tb1" Foreground="White" ></TextBlock>
            <TextBlock FontSize="30" x:Name="tb2" Foreground="White"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <TextBlock x:Name="dayOfWeekTb" Foreground="White" Text="So" VerticalAlignment="Bottom" FontWeight="Medium" Margin="12,12" FontSize="36"></TextBlock>
            <TextBlock x:Name="dayTb" Foreground="White" Margin="0,0,18,18" FontSize="100" FontWeight="SemiBold"  Height="110" ></TextBlock>

        </StackPanel>


    </Grid>
</UserControl>