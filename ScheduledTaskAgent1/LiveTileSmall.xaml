<UserControl x:Class="ScheduledTaskAgent1.LiveTileSmall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="159" d:DesignWidth="159">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <StackPanel VerticalAlignment="Bottom" >
            <TextBlock x:Name="dayOfWeekTb"  Foreground="White" Text="So" 
                       VerticalAlignment="Bottom" FontWeight="Medium" Margin="12,12" 
                       FontSize="36"/>
            <TextBlock x:Name="dayTb" Text="29" Foreground="White" 
                       HorizontalAlignment="Right"
                       Margin="0,-40,18,18" FontSize="100" 
                       FontWeight="SemiBold"  Height="110"/> 

        </StackPanel>
    </Grid>
</UserControl>