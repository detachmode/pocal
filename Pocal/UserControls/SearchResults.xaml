<UserControl x:Class="Pocal.SearchResults"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="80" d:DesignWidth="480">
    
    <StackPanel x:Name="LayoutRoot"
                Margin="12"
                Tap="LayoutRoot_OnTap"
                >
        <TextBlock Style="{StaticResource PhoneTextTitle2Style}" 
                   Foreground="{Binding CalColor}"
                   Text="{Binding Subject}">Einkaufen</TextBlock>

        <TextBlock Style="{StaticResource PhoneTextTitle2Style}" Text="{Binding StartTime, Converter={StaticResource DateTimeOffsetConverter}}">01:14</TextBlock>
    </StackPanel>
</UserControl>